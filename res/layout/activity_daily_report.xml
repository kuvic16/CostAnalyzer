<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vagabondlab.costanalyzer.DailyReportActivity" >

    <FrameLayout
        android:id="@+id/container" 
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/relative_layout_root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <RelativeLayout
    		android:id="@+id/relative_layout_short_summary"
			style="@style/relativeLayoutShortSummaryStyle">
            
            <TextView
				android:id="@+id/textView_summary_status"
				style="@style/textViewSummaryStatusStyle"/>
            
            <RelativeLayout
	    		android:id="@+id/relative_layout_summary"
	    		android:layout_below="@+id/textView_summary_status"
				style="@style/relativeLayoutSummaryStyle">
            
                <TextView
					android:id="@+id/textView_summary_total_cost"
					android:layout_alignParentLeft="true"
					android:background="@layout/summary_total_amount_design"
					style="@style/textViewSummaryCostStyle"/>
	            
	            
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/textView_cost_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relative_layout_short_summary"
            android:background="#FFA07A"
            android:padding="5dp"
            android:paddingTop="0dp"
            android:text="@string/cost_status"
            android:textSize="12sp" />

        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/textView_cost_status" />
    </RelativeLayout>
    
    <fragment
        android:id="@+id/navigation_drawer"
        android:name="com.vagabondlab.costanalyzer.NavigationDrawerFragment"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>