<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vagabondlab.costanalyzer.TransactionActivity" >

    <TextView
        android:id="@+id/textView_transaction_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transaction_name" />

    <EditText
        android:id="@+id/editText_transaction_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_transaction_name"
        android:layout_below="@+id/textView_transaction_name"
        android:ems="10"
        android:inputType="text" >
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView_transaction_lend_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_transaction_name"
        android:text="@string/transaction_lend_amount" />
    
    <EditText
        android:id="@+id/editText_transaction_lend_amount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_transaction_name"
        android:layout_below="@+id/textView_transaction_lend_amount"
        android:ems="10"
        android:inputType="numberDecimal" >
    </EditText>

	<TextView
        android:id="@+id/textView_transaction_borrow_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_transaction_lend_amount"
        android:text="@string/transaction_borrow_amount" />
    
    <EditText
        android:id="@+id/editText_transaction_borrow_amount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_transaction_name"
        android:layout_below="@+id/textView_transaction_borrow_amount"
        android:ems="10"
        android:inputType="numberDecimal" >
    </EditText>
    
</RelativeLayout>