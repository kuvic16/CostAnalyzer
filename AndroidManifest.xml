<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vagabondlab.costanalyzer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategoryActivity"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:label="@string/title_activity_category" >            
        </activity>
        <activity
            android:name=".CostActivity"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:label="@string/title_activity_cost" >
        </activity>
        <activity
            android:name=".DailyReportActivity"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:label="@string/title_daily_report" >
        </activity>
        <activity
            android:name=".WeeklyReportActivity"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:label="@string/title_weekly_report" >
        </activity>
        <activity
            android:name=".TotalReportActivity"
            android:configChanges="orientation"
            android:label="@string/title_total_report" >
        </activity>
        <activity
            android:name=".MonthlyReportActivity"
            android:configChanges="orientation"
            android:label="@string/title_monthly_report" >
        </activity>
        <activity
            android:name=".YearlyReportActivity"
            android:configChanges="orientation"
            android:label="@string/title_yearly_report" >
        </activity>
        <activity
            android:name=".TransactionActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_transaction" >
        </activity>
        <activity
            android:name=".TransactionDetailsActivity"
            android:configChanges="orientation" >
        </activity>
        <activity
            android:name=".BackupActivity"
            android:configChanges="orientation"
            android:label="@string/title_backup_screen" >
        </activity>
        <activity
            android:name=".AboutActivity"
            android:configChanges="orientation"
            android:label="@string/title_about_screen" >
        </activity>
        <activity
            android:name=".HelpActivity"
            android:configChanges="orientation"
            android:label="@string/title_help_screen" >
        </activity>
    </application>
</manifest>
